{
  "name": "wallpaper-portal-tests",
  "version": "1.0.0",
  "description": "Automated tests for wallpaper portal search functionality",
  "scripts": {
    "setup": "node setup.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "refresh-steps": "codeceptjs def",
    "test": "codeceptjs run --steps --plugins allure; node scripts/attach-videos.js",
    "test:headed": "codeceptjs run --steps --debug --plugins allure; node scripts/attach-videos.js",
    "test:category": "codeceptjs run --steps --grep @category-filtering --plugins allure; node scripts/attach-videos.js",
    "test:category:headed": "codeceptjs run --steps --grep @category-filtering --debug --plugins allure; node scripts/attach-videos.js",
    "test:download": "codeceptjs run --steps --grep @download --plugins allure; node scripts/attach-videos.js",
    "test:download:headed": "codeceptjs run --steps --grep @download --debug --plugins allure; node scripts/attach-videos.js",
    "test:search": "codeceptjs run --steps --grep @search --plugins allure; node scripts/attach-videos.js",
    "test:search:headed": "codeceptjs run --steps --grep @search --debug --plugins allure; node scripts/attach-videos.js",
    "test:all": "codeceptjs run --steps --grep \"@category-filtering|@download|@search\" --plugins allure; node scripts/attach-videos.js",
    "test:all:headed": "codeceptjs run --steps --grep \"@category-filtering|@download|@search\" --debug --plugins allure; node scripts/attach-videos.js",
    "clean": "node scripts/clean-reports.js",
    "debug": "codeceptjs run --steps --debug --plugins allure --grep \"@debug\"",
    "debug:attach": "node scripts/attach-videos.js",
    "debug:report": "npm run clean && (npm run debug || echo Tests completed) && npm run debug:attach && npm run report",
    "test:category:report": "npm run clean && (npm run test:category:headed || echo Tests completed) && npm run debug:attach && npm run report",
    "test:download:report": "npm run clean && (npm run test:download:headed || echo Tests completed) && npm run debug:attach && npm run report",
    "test:search:report": "npm run clean && (npm run test:search:headed || echo Tests completed) && npm run debug:attach && npm run report",
    "test:all:report": "npm run clean && (npm run test:all:headed || echo Tests completed) && npm run debug:attach && npm run report",
    "report:generate": "allure generate output/allure-results --clean -o output/allure-report",
    "report:open": "allure open output/allure-report",
    "report": "npm run report:generate && npm run report:open"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "e2e",
    "codeceptjs",
    "bdd"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "allure-codeceptjs": "^2.15.0",
    "@codeceptjs/configure": "^0.10.0",
    "@codeceptjs/ui": "^0.4.7",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@types/sharp": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "allure-commandline": "^2.25.0",
    "codeceptjs": "^3.5.0",
    "eslint": "^9.39.1",
    "eslint-plugin-check-file": "^3.3.1",
    "husky": "^9.1.7",
    "playwright": "^1.40.0",
    "sharp": "^0.34.5",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
