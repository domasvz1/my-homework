{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Refresh Cucumber Steps",
      "type": "shell",
      "command": "echo",
      "args": ["Cucumber steps refreshed. Close and reopen feature files if needed."],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run Debug Tests",
      "type": "npm",
      "script": "debug",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "TypeCheck",
      "type": "npm",
      "script": "typecheck",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "Lint",
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
}
